<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ListaComprasApp"
             xmlns:helpers="clr-namespace:ListaComprasApp.Helpers"
             x:Class="ListaComprasApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <helpers:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <helpers:BoolToTextDecorationsConverter x:Key="BoolToTextDecorationsConverter" />
            <helpers:IsNullConverter x:Key="IsNullConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>