<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ListaComprasApp.ViewModels"
             xmlns:models="clr-namespace:ListaComprasApp.Models"
             x:Class="ListaComprasApp.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource Primary}"
                Padding="20">
            <Label Text="Lista de Compras"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />
        </Border>

        <!-- Lista de Compras -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsBusy}"
                     Command="{Binding CarregarListasCommand}">
            <CollectionView ItemsSource="{Binding Listas}"
                           BackgroundColor="LightGray">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="CenterAndExpand" 
                                HorizontalOptions="CenterAndExpand"
                                Padding="50">
                        <Label Text="Nenhuma lista criada"
                               FontSize="18"
                               HorizontalTextAlignment="Center"
                               TextColor="Gray" />
                        <Label Text="Toque em + para criar sua primeira lista"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"
                               Margin="0,10,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ListaCompras">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Editar"
                                              BackgroundColor="Orange"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=EditarListaCommand}"
                                              CommandParameter="{Binding .}" />
                                    <SwipeItem Text="Excluir"
                                              BackgroundColor="Red"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=ExcluirListaCommand}"
                                              CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border BackgroundColor="White"
                                   Margin="10,5"
                                   Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=AbrirListaCommand}"
                                                         CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0">
                                        <Label Text="{Binding Nome}"
                                               FontSize="18"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding DataCriacao, StringFormat='Criada em {0:dd/MM/yyyy}'}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{Binding TotalItens, StringFormat='{0} itens'}"
                                                   FontSize="14"
                                                   TextColor="DarkBlue" />
                                            <Label Text="|" 
                                                   FontSize="14"
                                                   TextColor="Gray" />
                                            <Label Text="{Binding ValorTotalCalculado, StringFormat='R$ {0:F2}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="Green" />
                                        </StackLayout>
                                    </StackLayout>

                                    <StackLayout Grid.Column="1" 
                                                VerticalOptions="Center">
                                        <Label Text="{Binding ItensComprados, StringFormat='{0}'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               TextColor="Green" />
                                        <Label Text="comprados"
                                               FontSize="10"
                                               HorizontalTextAlignment="Center"
                                               TextColor="Gray" />
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- BotÃ£o Adicionar -->
        <Button Grid.Row="2"
                Text="+ Nova Lista"
                FontSize="18"
                FontAttributes="Bold"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="20"
                HeightRequest="50"
                Command="{Binding CriarNovaListaCommand}" />
    </Grid>
</ContentPage>