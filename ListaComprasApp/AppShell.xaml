<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ListaComprasApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ListaComprasApp.Views"
    Title="ListaComprasApp">

    <TabBar>
        <ShellContent
            Title="Produtos"
            ContentTemplate="{DataTemplate local:ProdutosPadraoPage}"
            Route="produtospadrao"
            Icon="list.png" />

        <ShellContent
            Title="Listas"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="main" />
    </TabBar>

    <ShellContent
        Title="Detalhes"
        ContentTemplate="{DataTemplate local:ListaDetalhesPage}"
        Route="listadetalhes" />

</Shell>